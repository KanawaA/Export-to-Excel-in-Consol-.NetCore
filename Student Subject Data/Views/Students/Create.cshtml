@model WebApplication.Models.Student

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create New Data</h2>
<br>

<div class="border container" style="padding:30px;">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="PhonNumber" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="PhonNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhonNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Address" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2 offset-3">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-2">
                    <a asp-action="Index" class="nav-link btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
